<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE sqlMapConfig      
    PUBLIC "-//ibatis.apache.org//DTD SQL Map Config 2.0//EN"      
    "http://ibatis.apache.org/dtd/sql-map-config-2.dtd">

<sqlMapConfig>

	<settings cacheModelsEnabled="true" 
			  enhancementEnabled="true" 
			  lazyLoadingEnabled="true" 
			  maxRequests="30" 
			  maxSessions="30" 
			  maxTransactions="30" 
			  useStatementNamespaces="true" />
			  
	<!--Define SQL Mapping--> 
	<sqlMap resource="conf/ibatis/contact.xml"/>
	<sqlMap resource="conf/ibatis/customer.xml"/>
	<sqlMap resource="conf/ibatis/customerContact.xml"/>
	<sqlMap resource="conf/ibatis/customerProject.xml"/>
	<sqlMap resource="conf/ibatis/dailyReport.xml"/>
</sqlMapConfig>